{"hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "destination": "/posts/[id]/index.html",
        "regex": "^/posts/([^/]+?)(?:/)?$"
      },
      {
        "destination": "/tags/[tag]/index.html",
        "regex": "^/tags/([^/]+?)(?:/)?$"
      }
    ]
  }
}
